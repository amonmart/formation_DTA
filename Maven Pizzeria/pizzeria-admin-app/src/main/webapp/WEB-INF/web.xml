<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<filter>
		<filter-name>FiltreLogin</filter-name>
		<filter-class>fr.pizzeria.admin.web.FiltreLogin</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>FiltreLogin</filter-name>
		<url-pattern>/pizzas/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>ListerPizzaController</servlet-name>
		<servlet-class>fr.pizzeria.admin.web.ListerPizzaController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditerPizzaController</servlet-name>
		<servlet-class>fr.pizzeria.admin.web.EditerPizzaController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>IdentifierController</servlet-name>
		<servlet-class>fr.pizzeria.admin.web.IdentifierController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListerPizzaController</servlet-name>
		<url-pattern>/pizzas/list</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditerPizzaController</servlet-name>
		<url-pattern>/pizzas/edit</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>IdentifierController</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
</web-app>

	